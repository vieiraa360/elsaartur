{
  "name": "ContactInquiry",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Client's full name"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Client's email address"
    },
    "phone": {
      "type": "string",
      "description": "Client's phone number"
    },
    "preferred_contact": {
      "type": "string",
      "enum": [
        "email",
        "phone"
      ],
      "description": "Preferred method of contact"
    },
    "message": {
      "type": "string",
      "description": "Message or inquiry details"
    },
    "status": {
      "type": "string",
      "enum": [
        "new",
        "contacted",
        "scheduled",
        "closed"
      ],
      "default": "new",
      "description": "Status of the inquiry"
    }
  },
  "required": [
    "name",
    "email",
    "message"
  ]
}